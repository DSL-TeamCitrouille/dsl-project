game DamDamRoyal {
  board { size 10 }

  pieces {
    piece white { color white quantity 12 }
    piece black { color black quantity 12 }
  }

  dice { faces 6 }

  rules {
    movement {
      alternating white and black
      direction any
      canMoveBackward true
    }
    action {
      type move
    }
    capture {
      mandatory true
      message "Nomnomnomnom"
    }
  }

  objective { 
    winByForfeit { allowed true} 
    winByCapture { captureAll opponent }
        }

  ui {
    theme {
      lightSquares: "gold"
      darkSquares: "indigo"
      highlight: "pink"
    }
  }

  settings { animationSpeed: 3 aiDifficulty: 3 }
}
